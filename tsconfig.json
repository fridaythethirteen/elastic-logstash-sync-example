{
  "compilerOptions": {
    "baseUrl": "src",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "dist",
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@daos/*": [
        "./daos/*"
      ],
      "@entities/*": [
        "./entities/*"
      ],
      "@shared/*": [
        "./shared/*"
      ],
      "@server": [
        "./Server"
      ],
      "@api": [
        "./api"
      ]
    },
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "spec/**/*.ts"
  ],
  "exclude": [
    "src/public/"
  ]
}